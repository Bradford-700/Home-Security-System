      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.6.0</version>
        <executions>
          <execution>
            <id>run npm install</id>
            <phase>compile</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>npm.cmd</executable>
              <arguments>
                <argument>install</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>run npm build</id>
            <phase>compile</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>npm.cmd</executable>
              <arguments>
                <argument>run</argument>
                <argument>build</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>delete static folder</id>
            <phase>compile</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>rmdir.cmd</executable>
              <arguments>
                <argument>../Spring-Backend/src/main/resources/static</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>create static dir</id>
            <phase>compile</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>mkdir.cmd</executable>
              <arguments>
                <argument>../Spring-Backend/src/main/resources/static</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>clone dist folder</id>
            <phase>compile</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>xcopy.cmd</executable>
              <arguments>
                <argument>/i</argument>
                <argument>/q</argument>
                <argument>/s</argument>
                <argument>/z</argument>
                <argument>./dist</argument>
                <argument>../Spring-Backend/src/main/resources/static/</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
